<robot name="long_wall">
  <link name="my_wall">
    <inertial>
      <origin xyz="0 0 0" /> 
      <mass value="0.01" />
      <inertia  ixx="0.001" ixy="0.0"  ixz="0.0"  iyy="0.001"  iyz="0.0"  izz="0.001" />
    </inertial>
    <visual>
      <origin xyz="0 0 1.0"/>
      <geometry>
        <box size="0.2 15.0 2.0"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 1.0"/>
      <geometry>
        <box size="0.2 15.0 2.0"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="my_wall">
    <static>true</static>
  </gazebo>
</robot>

